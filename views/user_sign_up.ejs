<link rel="stylesheet" href = "/css/user_sign_up.css">
<h1>
    Sign Up
</h1>
<form action = "/users/create" method="post">
    <input type="text" name="first_name" placeholder="Your First Name" required>
    <input type="text" name="last_name" placeholder="Your Last Name (optional) ">
    <input type="email" name="email" placeholder="Your E-mail" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="password" name="confirm_password" placeholder="Confirm Password" required>
    <button type="submit" id = "sign-up">Sign Up</button>
</form>