<link rel="stylesheet" href = "/css/home.css">
<% if(locals.user) { %>
<h1> 
    Welcome, <%= locals.user.first_name %> ! How are you doing today ?
</h1>
    <%  } else { %>
    <h1> 
        Welcome to Codeella
    </h1> 
 <%  }  %>

<section id = "feed-posts">
    <% if(locals.user) { %>
    <form action = "/posts/create" id = "new-post-form" method = "POST">

        <textarea name = "content" cols = "50" rows = "5" placeholder="Type here to share what you're upto with everyone.." required></textarea>

        <input type="submit" value="Post">
    </form>
    <%  }  %>
    <div id = "posts-list-container">
        <ul>
          <% for( post of posts){ %>
            <%-include('_post')-%>
         <%  }  %>
        </ul>
    </div>
</section>

<section id = "user-friends">
    <h4>Friends</h4>
    <% for(u of all_users){ %>
        <p>
            <a href = "/users/profile/<%= u.id %>"> <%= u.first_name %> <%= u.last_name %></a>
        </p>




    <% } %>

</section>